{
  "name": "dbnotebook",
  "displayName": "Databricks Notebook",
  "description": "Plugin to run Databricks notebooks in VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Notebooks"
  ],
  "activationEvents": ["onNotebook:databricks-notebook"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dbNotebook.runAll",
        "title": "Databricks Notebook: Run All"
      }
    ],
    "notebooks": [
      {
          "id": "databricks-notebook",
          "type": "databricks-notebook",
          "displayName": "Databricks Notebook",
          "selector": [
              {
                  "filenamePattern": "*.databricks"
              }
          ]
      }
    ],
    "configuration": {
        "type": "object",
        "title": "Databricks Notebook",
        "properties": {
            "databricksNotebook.environmentActivationCommand": {
                "type": "string",
                "description": "Custom environment activation command",
                "default": "workon dbconnect_env"
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
